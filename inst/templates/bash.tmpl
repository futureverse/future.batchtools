######################################################################

## Maximum runtime?
<%
runtime <- resources[["timeout"]]
timeout <- if (is.null(runtime)) "" else sprintf("timeout %s", runtime)
%>

# Launch R and evaluate the batchtools R job
<%= timeout %> Rscript -e 'batchtools::doJobCollection("<%= uri %>", output = "<%= log.file %>")'
